<Window x:Class="GymApp.FetchCardID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="FetchCardID" Height="195.087" Width="330.492" Background="#FF494957">
    <Grid>
        <Label x:Name="label" Content="Waiting for card ID to be scanned ..." HorizontalAlignment="Center" Margin="10,53,0,0" Background="{x:Null}" Foreground="White" FontSize="18" Width="302" VerticalAlignment="Top"/>
        <Image gif:ImageBehavior.AnimatedSource="Resources/Loading_icon.gif" Margin="142,92,137,29"/>
        <Button x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" Width="86" BorderBrush="{x:Null}" Foreground="#FF494957" Background="#FFFF4141" Click="btn_Cancel_Click" Height="28" FontWeight="Bold" FontSize="16"/>
    </Grid>
</Window>
